{
  "name": "@adyen/react-native",
  "version": "1.0.0-local.0",
  "description": "Wraps Adyen Checkout SDKs for iOS and Android for convenient use with React Native.",
  "license": "MIT",
  "author": "Adyen",
  "homepage": "https://adyen.com",
  "repository": "https://github.com/Adyen/adyen-react-native",
  "bugs": {
    "url": "https://support.adyen.com/"
  },
  "keywords": [
    "adyen",
    "adyen-ios",
    "adyen-android",
    "checkout",
    "payment",
    "payments",
    "components"
  ],
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "source": "src/index",
  "files": [
    "lib",
    "android",
    "ios",
    "adyen-react-native.podspec",
    "LICENSE",
    "README"
  ],
  "scripts": {
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "ios": "yarn example && cd example && yarn ios",
    "android": "yarn example && cd example && yarn android",
    "bootstrap": "git clean -fxd && yarn example && yarn && yarn pods"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "pod-install": "^0.1.30",
    "prettier": "^2.0.5",
    "react": "^18.0.0",
    "react-native": "0.70.6",
    "react-native-builder-bob": "^0.20.0",
    "release-it": "^15.5.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module"
    ]
  },
  "eslintConfig": {
    "root": true,
    "plugins": [
      "react-hooks"
    ],
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ]
}
